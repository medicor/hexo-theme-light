#header
  padding 70px 0 20px 0
  a
    color #999
    &:hover
      color color-link
      text-decoration none
  h1
    color #666
    font-weight normal
    font-size 2.8rem
    line-height 2.8rem
    margin 0 0 0.5rem 0
    @media screen and (max-width: 900px)
      font-size 2.3rem
      line-height 2.3rem
    @media screen and (max-width: 600px)
      font-size 1.8rem
      line-height 1.8rem
  h2
    font-weight normal
    font-size 1.0rem
    margin 0 0 0.5rem 0
  img
    width auto
    height 1.4em

#navigator
  h3
    font-size 1.5rem
    margin-bottom 0.3rem
  h4
    font-size 1.0rem
    margin-bottom 0.1rem
  a
    display block
    color #ddd
    padding 0.5rem 0
  #search-form
    margin-top 2.0rem
    #search-input
      margin-bottom 1.0rem
  #search-results
    a
      font-size 0.9rem
      padding 0.2rem 0
   .search-noresult
     font-style italic
     padding 0.5rem
  a.tax-badge
    display inline
    font-size 0.8rem
    padding 0 0.2rem
    margin 0 0.2rem 0 0
    background-color darken(color-link, 70%)
    border-radius 2px
    border 1px solid darken(color-link, 50%)
