#header
  padding 60px 0 20px 0
  a
    color #999
    &:hover
      color color-link
      text-decoration none
  h1
    color #000
    font-weight normal
    font-size 2.8rem
    line-height 2.8rem
    margin 0 0 1.0rem 0
  h2
    font-weight normal
    font-size 1.0rem
    margin-bottom 0.5rem

#navigator
  h3
    font-size 1.5rem
    margin-bottom 0.3rem
  h4
    font-size 1.0rem
    margin-bottom 0.1rem
  a
    display block
    color #ddd
    padding 0.5rem
  a.tax-badge
    display inline
    font-size 0.8rem
    padding 0 0.2rem
    margin 0 0.2rem 0 0
    background-color darken(color-link, 70%)
    border-radius 2px
    border 1px solid darken(color-link, 50%)
  #search-results
    margin 0
    ul
      padding 0
      margin 0
    li
      list-style none inside
    a
      font-size 0.9rem

   .search-noresult
     font-style italic
     padding 0.5rem
  
